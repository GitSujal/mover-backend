# NPM Configuration for faster and more reliable installs in Docker

# Increase timeouts for slow networks or large packages
fetch-retry-maxtimeout=600000
fetch-retry-mintimeout=100000
fetch-timeout=600000
network-timeout=600000

# Use npm cache effectively
prefer-offline=true

# Disable progress bar in CI/Docker (cleaner logs)
progress=false

# Skip audit during install (faster builds)
audit=false

# Use only package-lock.json (no package.json fallback)
package-lock=true
